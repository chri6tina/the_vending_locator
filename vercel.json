{
  "framework": "nextjs",
  "buildCommand": "NODE_OPTIONS=--max-old-space-size=40960 npm run build",
  "outputDirectory": ".next",
  "build": {
    "env": {
      "CACHE_BUST": "v4",
      "NODE_OPTIONS": "--max-old-space-size=40960"
    }
  },
  "functions": {
    "app/**/*.tsx": {
      "maxDuration": 60
    }
  }
}
